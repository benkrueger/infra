---
version: '2.3'
services:
  sonarr:
    image: lscr.io/linuxserver/sonarr
    container_name: sonarr
    environment:
      - PUID={{ admin_user_id }}
      - PGID={{ fileaccess_gid}}
      - TZ={{ timezone }}
    volumes:
      - sonarr_config:/config
      - /mainarray/media/tv:/tv #optional
      - /tank/mnemesync:/downloads #optional
    ports:
      - 8989:8989
volumes:
  sonarr_config