---
version: '2.3'
services:
  sonarr:
    image: localhost:5000/sonarr
    container_name: sonarr
    environment:
      - PUID={{ PUID }}
      - PGID={{ PGID }}
      - TZ={{ timezone }}
    volumes:
      - sonarr_config:/config
      - /mainarray/media/tv:/tv #optional
      - /tank/mnemesync:/downloads #optional
    ports:
      - 8989:8989
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
volumes:
  sonarr_config