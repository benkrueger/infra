---
version: "2.1"
services:
  overseerr:
    image: localhost:5000/overseerr
    container_name: overseerr
    environment:
      - PUID={{ PUID }}
      - PGID={{ PGID }}
      - TZ={{ timezone }}
    volumes:
      - overseerr_config:/config
    ports:
      - 5055:5055
    restart: unless-stopped
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
volumes:
  overseer_config: