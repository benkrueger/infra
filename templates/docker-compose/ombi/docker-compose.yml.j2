---
version: "2.1"
services:
  ombi:
    image: localhost:5000/ombi
    container_name: ombi
    environment:
      - PUID={{ PUID }}
      - PGID={{ PGID }}
      - TZ={{ timezone }}
      - BASE_URL={{ ombi_url }} #optional
    volumes:
      - ombi:/config
    ports:
      - 3579:3579
    restart: unless-stopped
volumes:
  ombi_config: