---
version: '2.3'
services:
  endlessh:
    image: localhost:5000/endlessh
    container_name: endlessh
    environment:
      - PUID={{ PUID }}
      - PGID={{ PGID }}
      - TZ={{ timezone }}
      - MSDELAY=10000 #optional
      - MAXLINES=32 #optional
      - MAXCLIENTS=4096 #optional
      - LOGFILE=true #optional
      - BINDFAMILY= #optional
    volumes:
      - endlessh_config:/config #optional
    ports:
      - 22:2222
    #runtime: "runsc"
    restart: unless-stopped
volumes:
  endlessh_config: