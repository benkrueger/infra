---
version: '2.3'
services:
  zoneminder:
    image: aptalca/zoneminder-1.29
    privileged: true
    ports:
      - "8035:80"
    volumes:
      - ./zm:/config
      - /tank/stuff/zm:/video
    environment:
      - TZ=America/Chicago
      - PUID={{ service_ids.ansible_facts.getent_passwd.zoneminder.1 }}
      - PGID={{ service_ids.ansible_facts.getent_passwd.zoneminder.2 }}