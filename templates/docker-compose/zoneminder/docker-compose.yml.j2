---
version: '2.3'
services:
  zoneminder:
    image: localhost:5000/zoneminder:latest
    privileged: true
    ports:
      - "8035:80"
    volumes:
      - zm_config:/config
      - /tank/stuff/zm:/video
    environment:
      - TZ={{ timezone }}
      - PUID={{ PUID }}
      - PGID={{ PGID }}
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
volumes:
  zm_config: