---
version: "2.3"
services:
    cadvisor:
        image: localhost:5000/cadvisor
        container_name: cadvisor
        privileged: true
        environment:
          - PUID={{ PUID }}
          - PGID={{ PGID }}
        volumes:
        - /:/rootfs:ro
        - /var/run:/var/run:ro
        - /var/lib/docker:/var/lib/docker:ro
        - /dev/disk:/dev/disk:ro
        ports:
        - 8780:8080
        devices:
        - /dev/kmsg
        labels:
        - "com.centurylinklabs.watchtower.enable=true"