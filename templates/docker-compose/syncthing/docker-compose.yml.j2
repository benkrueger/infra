---
version: '2.3'
services:
  syncthing:
    image: localhost:5000/syncthing
    container_name: syncthing
    hostname: syncthing #optional
    environment:
      - PUID={{ PUID }}
      - PGID={{ PGID }}
      - TZ={{ timezone }}
    volumes:
      - st_config:/config
      - /tank/mnemesync:/mnemesync
    ports:
      - 8384:8384
      - 22000:22000/tcp
      - 22000:22000/udp
      - 21027:21027/udp
    restart: unless-stopped
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
  #Basic services
volumes:
  st_config: