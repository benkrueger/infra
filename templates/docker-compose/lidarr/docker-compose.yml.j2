---
version: '2.3'
services:
  lidarr:
    image: lscr.io/linuxserver/lidarr
    container_name: lidarr
    environment:
      - PUID={{ admin_user_id }}
      - PGID={{ fileaccess_gid }}
      - TZ={{ timezone }}
    volumes:
      - lidarr_config_vol:/config
      - /mainarray/media/music:/music #optional
      - /tank/mnemesync:/downloads #optional
    ports:
      - 8686:8686
    restart: unless-stopped
volumes:
  lidarr_config_vol: